generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Directions
// R&D project management including project creation, project update

// It should be able to search projects based on metadata associated with projects

// Each project has a R&D cost total made up of many expenses each with their own timestamp 

// Each expense has amount, is_qualified flag


model Project {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String   @db.VarChar(255)
  description String @db.VarChar(255)
  expenses  Expense[]
}

model Expense {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  is_qualified Boolean  @default(true)
  name     String   @db.VarChar(255)
  cost     Decimal  @db.Decimal()
  project   Project  @relation(fields: [prtojectId], references: [id])
  prtojectId  Int
}
